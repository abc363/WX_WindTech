.actionBar{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #2980B9;
  color: white;
  display: flex;
  position: fixed;
  bottom: 0;
  flex-direction: row;
  font-size: 34rpx;
  font-weight: 600;
  right: 0;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
  justify-content: center;
  align-items: center;
  z-index: 999;
  box-shadow: 1px 1px 1px #2980B9;
}
.product_menu{
  position: fixed;
  bottom: 0;
  right: 0;
  margin-bottom: 170rpx;
  margin-right: 15rpx;
  width: 150rpx;
  height: auto;
  border: 1px solid #dddddd;
  border-radius: 10rpx;
   z-index: 998;
}
.product_menu view:last-of-type{
  border-bottom: none;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.product_menu view:first-of-type{
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.product_menu_item{
  width: 100%;
  height: 65rpx;
  border-bottom: 1px solid #dddddd;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  color: #454545;
  z-index: 998;
}
.product_menu::before{
  position: absolute;
  bottom: -6px;
  content: '';
  left: 60rpx;
  width: 60rpx;
  height: 60rpx;
  border-style:solid;
  border-width:1px;
  border-color: #dddddd ;
  border-radius:10rpx;
  background: white;
  transform:rotate(45deg);
  z-index: -1;
}


/*右侧产品展示*/
.product_list_right{
	width: 85%;
	height: auto;
	margin-left: 7.5%;
	float: left;
}
#product_list_right_body{
	width: 100%;
	height: 100%;
	display: inline-block;
	box-sizing: border-box;
  overflow-y:auto;
	overflow-x: hidden;
}
/*每个产品div*/
.li{
	width: 100%;
	height: auto;
	float: left;
	margin-top: 30rpx;
	margin-bottom:30rpx;
	position: relative;
	box-sizing:border-box;
  border: 2px solid #dddddd;
  border-radius: 5rpx;
}
/*产品图片*/
.product_list_image{
	width:100%;
	height:330rpx;
	float: left;
  margin-bottom:10rpx;
}

.product_right{
	width: 90%;
	height: auto;
  margin-left: 5%;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}
.product_right p:first-of-type{
  font-size: 30rpx;
  font-weight: 600;
}
.product_info_div{
	margin-top:10rpx;
	font-size: 26rpx;
	color: #5B5B5B;
	text-indent: 1vw;
	line-height: 40rpx;
}
.product_num{
	color: red;
	font-size: 26rpx;
	text-align:right;
  margin-top:10rpx;
}