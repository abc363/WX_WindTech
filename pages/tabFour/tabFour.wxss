.testi-bg{
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}
.company_body{
	width: 90%;
	height:auto;
	margin-left: 5%;
}
.company_body_right{
	width: 100%;
	height: 100%;
}
.company_body_right li{
	width: 100%;
	height: 100%;
}
.body_right_top{
	width: 100%;
	height: 50rpx;
  display: block;
  font-weight: 600;
  font-size: 30rpx;
  background: #2980B9;
  color: white;
  text-align: center;
  line-height: 50rpx;
}
.body_right_top p{
  margin-left: 10rpx;
	font-size: 30rpx;
	color: #dddddd;
	letter-spacing: 2px;
}
#body_right1,#body_right2{
  display: block;
  border: 1px solid #dddddd;
}
#body_right1_span{
	width: 95%;
	height: auto;
	font-size: 26rpx;
	line-height: 40rpx;
	color: #5B5B5B;
  display: block;
  margin-left: 2.5%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
#body_right1_span view{
  text-indent: 2em;
}
#body_right1_span text{
  color: #2980B9;
}
.body_right_image{
	width: 80%;
	height: 300rpx;
	overflow: hidden;
	display: inline-block;
  margin-left: 10%;
  margin-top: 25rpx;
}
.body_right_image image{
	width: 100%;
	height: 100%;
	float: left;
}
.body_right2_text{
	line-height: 38rpx;
	font-size: 26rpx;
	color: #5B5B5B;
	margin-left:2.5%;
  height: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 95%;
  display: block;
}
.body_right2_text text{
  color: #2980B9;
}




.contect_title{
  width: 90%;
	font-size: 32rpx;
	color: #2980B9;
  margin-left: 5%;
  display: block;
  float: left;
  margin-top:20rpx;
  font-weight: 600;
}
.contact_info{
  width: 90%;
	font-size: 28rpx;
  display: block;
  margin-left: 5%;
  color: #5B5B5B;
  line-height: 40rpx;
}

.page-section-gap{
  box-sizing: border-box;
  width: 90%;
  margin-left: 5%;
  margin-bottom: 10rpx;
}
